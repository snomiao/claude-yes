{
  "name": "claude-yes",
  "version": "0.0.0",
  "description": "A wrapper tool that automates interactions with various AI CLI tools by automatically handling common prompts and responses.",
  "keywords": [
    "claude",
    "ai",
    "automation",
    "cli",
    "wrapper",
    "assistant",
    "anthropic",
    "auto-response"
  ],
  "homepage": "https://github.com/snomiao/claude-yes#readme",
  "bugs": {
    "url": "https://github.com/snomiao/claude-yes/issues"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/snomiao/claude-yes.git"
  },
  "license": "MIT",
  "author": "snomiao <snomiao@gmail.com>",
  "type": "module",
  "exports": {
    "import": "./dist/index.js",
    "types": "./index.ts"
  },
  "main": "dist/index.js",
  "module": "index.ts",
  "types": "./index.ts",
  "bin": {
    "claude-yes": "dist/claude-yes.js",
    "codex-yes": "dist/codex-yes.js",
    "copilot-yes": "dist/copilot-yes.js",
    "cursor-yes": "dist/cursor-yes.js",
    "gemini-yes": "dist/gemini-yes.js",
    "grok-yes": "dist/grok-yes.js"
  },
  "directories": {
    "doc": "docs"
  },
  "files": [
    "*.ts",
    "dist"
  ],
  "scripts": {
    "build": "bun build index.ts cli.ts --packages=external --outdir=dist --target=node --sourcemap",
    "postbuild": "bun ./postbuild.ts",
    "dev": "tsx index.ts",
    "fmt": "bunx @biomejs/biome check --fix && bunx sort-package-json",
    "prepack": "bun run build",
    "prepare": "bunx husky",
    "test": "vitest"
  },
  "lint-staged": {
    "*.{ts,js,json,md}": [
      "bunx @biomejs/biome check --fix"
    ]
  },
  "dependencies": {
    "bun-pty": "^0.3.2",
    "p-map": "^7.0.3",
    "phpdie": "^1.7.0",
    "tsa-composer": "^3.0.0"
  },
  "devDependencies": {
    "@biomejs/biome": "^2.2.5",
    "@types/bun": "^1.2.18",
    "@types/jest": "^30.0.0",
    "@types/node": "^24.0.10",
    "@types/yargs": "^17.0.33",
    "enhanced-ms": "^4.1.0",
    "execa": "^9.6.0",
    "from-node-stream": "^0.0.11",
    "husky": "^9.1.7",
    "lint-staged": "^16.1.4",
    "rambda": "^10.3.2",
    "semantic-release": "^24.2.6",
    "sflow": "^1.20.2",
    "strip-ansi-control-characters": "^2.0.0",
    "terminal-render": "^1.2.0",
    "tsx": "^4.20.3",
    "vitest": "^3.2.4",
    "yargs": "^18.0.0"
  },
  "peerDependencies": {
    "node-pty": "^1.0.0",
    "typescript": "^5.8.3"
  }
}
