{
  "name": "agent-yes",
  "version": "1.31.41",
  "description": "A wrapper tool that automates interactions with various AI CLI tools by automatically handling common prompts and responses.",
  "keywords": [
    "ai",
    "anthropic",
    "assistant",
    "auto-response",
    "automation",
    "claude",
    "cli",
    "codex",
    "copilot",
    "cursor",
    "gemini",
    "grok",
    "qwen",
    "wrapper"
  ],
  "homepage": "https://github.com/snomiao/claude-yes#readme",
  "bugs": {
    "url": "https://github.com/snomiao/claude-yes/issues"
  },
  "license": "MIT",
  "author": "snomiao <snomiao@gmail.com>",
  "repository": {
    "type": "git",
    "url": "git+https://github.com/snomiao/claude-yes.git"
  },
  "bin": {
    "agent-yes": "ts/cli.ts",
    "auggie-yes": "ts/cli.ts",
    "claude-yes": "ts/cli.ts",
    "codex-yes": "ts/cli.ts",
    "copilot-yes": "ts/cli.ts",
    "cursor-yes": "ts/cli.ts",
    "gemini-yes": "ts/cli.ts",
    "grok-yes": "ts/cli.ts",
    "qwen-yes": "ts/cli.tss"
  },
  "directories": {
    "doc": "docs"
  },
  "files": [
    "dist",
    "scripts",
    "ts/*.ts"
  ],
  "type": "module",
  "module": "ts/index.ts",
  "types": "./ts/index.ts",
  "exports": {
    "types": "./ts/index.ts",
    "import": "./dist/index.js"
  },
  "publishConfig": {
    "provenance": true,
    "registry": "https://registry.npmjs.org/",
    "tag": "latest"
  },
  "scripts": {
    "build": "bun run build:index && bun run build:cli",
    "postbuild": "bun ./ts/postbuild.ts",
    "build:binaries": "bun run ts/build-binaries.ts",
    "build:binary": "bun run ts/build-binary-local.ts",
    "build:cli": "bun build ts/cli.ts --outdir=dist --target=node --sourcemap --external=@snomiao/bun-pty --external=bun-pty --external=node-pty --external=from-node-stream --external=bun",
    "build:index": "bun build ts/index.ts --outdir=dist --target=node --sourcemap --external=@snomiao/bun-pty --external=bun-pty --external=node-pty --external=from-node-stream --external=bun",
    "demo": "bun run build && bun link && claude-yes -- demo",
    "dev": "bun ts/index.ts",
    "fmt": "oxlint --fix --fix-suggestions && oxfmt",
    "prepack": "bun run build",
    "prepare": "bunx husky && bun run build",
    "release:beta": "bunx standard-version && bun publish --tag beta",
    "test": "bun test --coverage"
  },
  "dependencies": {
    "@snomiao/bun-pty": "^0.3.4",
    "bun": "^1.3.4",
    "bun-pty": "^0.4.6",
    "cpu-wait": "^0.0.10",
    "execa": "^9.6.0",
    "from-node-stream": "^0.1.2",
    "ms": "^2.1.3",
    "p-map": "^7.0.3",
    "phpdie": "^1.7.0",
    "rambda": "^10.3.2",
    "semantic-release": "^24.2.9",
    "sflow": "^1.20.2",
    "strip-ansi-control-characters": "^2.0.0",
    "terminal-render": "^1.2.2",
    "tsa-composer": "^3.0.3",
    "winston": "^3.19.0",
    "yargs": "^18.0.0"
  },
  "devDependencies": {
    "@biomejs/biome": "^2.2.5",
    "@semantic-release/changelog": "^6.0.3",
    "@semantic-release/exec": "^7.1.0",
    "@semantic-release/git": "^10.0.1",
    "@semantic-release/release-notes-generator": "^14.1.0",
    "@types/bun": "^1.2.18",
    "@types/jest": "^30.0.0",
    "@types/ms": "^2.1.0",
    "@types/node": "^25.0.3",
    "@types/yargs": "^17.0.33",
    "husky": "^9.1.7",
    "lint-staged": "^16.1.4",
    "node-pty": "^1.1.0",
    "oxfmt": "^0.23.0",
    "oxlint": "^1.38.0",
    "vitest": "^3.2.4"
  },
  "peerDependencies": {
    "node-pty": "latest",
    "typescript": "^5.8.3"
  },
  "peerDependenciesMeta": {
    "node-pty": {
      "optional": true
    }
  },
  "engines": {
    "node": ">=22.0.0"
  },
  "_release": {
    "branches": [
      "main"
    ],
    "plugins": [
      "@semantic-release/commit-analyzer",
      "@semantic-release/release-notes-generator",
      "@semantic-release/changelog",
      "@semantic-release/npm",
      [
        "@semantic-release/exec",
        {
          "publishCmd": "npm pkg set name=claude-yes"
        }
      ],
      "@semantic-release/npm",
      "@semantic-release/git",
      "@semantic-release/github"
    ]
  }
}
